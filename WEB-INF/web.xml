<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>PersistenceSessionManager</display-name>
	<context-param>
		<description>
		Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>

	<servlet>
		<description>
		</description>
		<display-name>PersistenceVaadinServlet</display-name>
		<servlet-name>PersistenceVaadinServlet</servlet-name>
		<servlet-class>com.vaadin.server.PersistenceVaadinServlet</servlet-class>
		
			<init-param>
				<description>
				Vaadin UI class to use</description>
				<param-name>UI</param-name>
				<param-value>com.example.persistencesessionmanager.PersistencesessionmanagerUI</param-value>
			</init-param>
			
			<init-param>
				<description>Persistence Mechanism to use</description>
				<param-name>PersistenceMechanism</param-name>
				<param-value>AMAZONS3</param-value>
			</init-param>
			
			<init-param>
				<description>Access Key for Amazon S3</description>
				<param-name>accessKey</param-name>
				<param-value>INSERT ACCESS KEY HERE</param-value>
			</init-param>
			
			<init-param>
				<description>Secret Key for Amazon S3</description>
				<param-name>secretKey</param-name>
				<param-value>INSERT SECRET KEY HERE</param-value>
			</init-param>
			
			<init-param>
				<description>Name of Bucket for Amazon S3</description>
				<param-name>bucketName</param-name>
				<param-value>vaadinservletbucket</param-value>
			</init-param>
		
	</servlet>
	<servlet-mapping>
		<servlet-name>PersistenceVaadinServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>
